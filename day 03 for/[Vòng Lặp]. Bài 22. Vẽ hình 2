n = int(input())
for i in range(1,n+1):
    for j in range(i):
        print('*', end = '')
    print()
print()

for i in range(1,n+1):
    for j in range(n+1):
        if i <= n - j:
            print('*', end = '')
        else:
            print(' ', end = '')
    print()
print()

for i in range(1, n+1):
    for j in range(1, n+1):
        if j <= n - i:
            print(' ',end = '')
        else:
            print('*', end = '')
    print()
print()

for i in range(n, 0, -1):
    for j in range(1, n+1):
        if j <= n - i:
            print(' ',end = '')
        else:
            print('*', end = '')
    print()
print()

for i in range(0, n):
    for j in range(0, n):
        if i == n-1 or j == 0 or j == i:
            print('*', end = '')
        else:
            print(' ', end = '')
    print()
print()

input: 5
output:

*
**
***
****
*****

*****
****
***
**
*

    *
   **
  ***
 ****
*****

*****
 ****
  ***
   **
    *

*
**
* *
*  *
*****
