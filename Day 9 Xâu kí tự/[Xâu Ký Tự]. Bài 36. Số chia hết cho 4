from math import *


def check(s):
    last = int(s) % 100
    if len(s) == 1:
        if int(s) % 4 != 0:
            return 0
    else:
        if last % 4 != 0:
            return 0
    return 1
if __name__ == '__main__':
    s = input()
    if check(s):
        print('YES')
    else:
        print('NO')


    

        

    
            
    
